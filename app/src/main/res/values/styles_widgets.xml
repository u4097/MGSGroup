<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Toolbar: uses in layout: ac_mainscreen.xml and ac_login.xml -->
    <style name="Widget.MGS.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:background">?attr/themePrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <!-- *********************  Text ********************************************* -->

    <!--  Tab layout theme-->
    <style name="TabLayout.MGS" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>


    <!--Tab Layout-->
    <style name="TabLayoutTextStyle">
        <item name="fontFamily">@font/muller_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Fonts-->
    <style name="MullerBold20">
        <item name="fontFamily">@font/muller_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MullerBold14">
        <item name="fontFamily">@font/muller_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MullerMedium14">
        <item name="fontFamily">@font/muller_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MullerRegular14">
        <item name="fontFamily">@font/muller_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MullerMedium17">
        <item name="fontFamily">@font/muller_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MullerMedium18">
        <item name="fontFamily">@font/muller_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MullerRegular34">
        <item name="fontFamily">@font/muller_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

</resources>